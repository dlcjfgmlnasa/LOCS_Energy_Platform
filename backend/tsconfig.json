{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "lib": [
        "dom",
        "es5",
        "es2015.promise" 
      ],
      "sourceMap": true,
      "moduleResolution": "node",
      "outDir": "dist", 
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}